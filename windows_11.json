{
  "builders": [
    {
      "boot_command": [
        "a<enter><wait>a<enter><wait>a<enter><wait>a<enter>"
      ],
      "boot_wait": "1s",
      "communicator": "winrm",
      "configuration_version": "11.0",
      "cpus": "4",
      "disk_size": "{{user `disk_size`}}",
      "secondary_iso_images": [
        "./win11_secondary.iso"
      ],
      "enable_secure_boot": false,
      "generation": "2",
      "guest_additions_mode": "none",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "switch_name": "{{user `switch_name`}}",
      "type": "hyperv-iso",
      "vm_name": "{{user `vm_name`}}",
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_use_ntlm": true
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "./scripts/vm-guest-tools.ps1",
        "./scripts/debloat-windows.ps1"
      ],
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "./scripts/set-powerplan.ps1",
        "./scripts/docker/disable-windows-defender.ps1"
      ],
      "type": "powershell"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat",
        "./scripts/dis-updates.bat",
        "./scripts/compact.bat"
      ],
      "type": "windows-shell"
    },
    {
      "type":"ansible",
      "playbook_file":"../ansible-personal/profvm.yml",
      "extra_arguments": [ 
        "-vvvv",
        "-e",
        "ansible_winrm_server_cert_validation=ignore",
        "-e",
        "ansible_connection=winrm",
        "-i",
        "../ansible-personal/inventory/hosts"
      ],
      "keep_inventory_file":"true",
      "user":"vagrant",
      "use_proxy":"false"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/11/Autounattend.xml",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "8192",
    "headless": "false",
    "iso_checksum": "sha256:0DF2F173D84D00743DC08ED824FBD174D972929BD84B87FE384ED950F5BDAB22",
    "iso_url": "g:\\os\\Win11_22H2_English_x64v1.iso",
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "virtio_win_iso": "~/virtio-win.iso",
    "vm_name": "windows_11",
    "winrm_timeout": "6h",
    "vmx_version": "14"
  }
}
